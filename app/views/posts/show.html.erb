<div class="text-center mt-5">
  <h1><span class="border-bottom border-dark">Details</span></h1>
  
  <div class="mt-5">
  <h3><% @post.id %><%= @post.word %></h3>
  
  <p><span class="border border-dark"><%= @post.description %></span></p>
  </div>
</div>
 
 <div class="row" >
   <div class="col-2 mx-auto mt-5">
     <%= link_to 'To Edit', edit_post_path(@post), class: 'btn btn-outline-dark btn-block' %>
     <%= link_to 'Delates', @post, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-outline-dark btn-block' %>
    </div>
 </div> 


<div class="text-center offset-1 mt-2">
  <%= link_to 'To Back', posts_path %>
</div>



