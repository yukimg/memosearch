<div class="text-center mt-5">
  <h1><span class="border-bottom border-dark">Details</span></h1>
  
  <div class="mt-5">
      <h3><%= @post.word %></h3>
  <div class="row">
      <div class="text-left border border-dark offset-4 col-4" style="word-break: break-all;">
          <%= safe_join(@post.description.split("\n"),tag(:br)) %>
      </div>
  </div>
  </div>
</div>
 
 <div class="row" >
   <div class=" text-center offset-4 col-4 mt-5">
     <%= link_to 'To Edit', edit_post_path(@post), class: 'btn btn-outline-dark text-secondary' %>
     <%= link_to 'Delates', @post, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-outline-dark btn-secondary' %>
     <%= link_to 'To Back', posts_path, class: 'btn btn-outline-dark bg-light' %>
    </div>
 </div> 






