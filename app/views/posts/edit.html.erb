<div class="text-center">
  <h1><span class="border-bottom border-dark">To Add</span></h1>
</div>


 <%= form_with(model: @post, local: true) do |f| %> 
  <div class="form-group mt-5">
      <div class="form-inline mx-auto">
          <div class="offset-3 col-3"><%= f.label :word, 'Word', class: 'control-label' %></div>
          <div class="col-3"><%= f.text_field :word, class: 'form-control' , size: 30 %></div>
      </div>
  </div>
  
  <div class="form-group">
      <div class="form-inline mx-auto">
          <div class="offset-3 col-3"><%= f.label :Description, 'Description' %></div>
          <div class="col-6"><%= f.text_area :description, class: "form-control" , size: "30x10" %></div>
      </div>
  </div>
  
  <div class="col-5 mx-auto mt-5">
  <%= f.submit 'Add',class: 'btn btn-outline-dark btn-block' %>
  </div>
 <% end %>