<div class="text-center mt-sm-5">
  <h1><span class="border-bottom border-dark">To Add</span></h1>
</div>


 <%= form_with(model: @post, local: true) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-warning text-center offset-3 col-6">
      <ul class="mb-0">
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
 <% end %>

  <div class="form-group mt-sm-5">
      <div class="form-inline offset-sm-2 col-sm-8">
          <div class="offset-sm-1 col-sm-2"><%= f.label :word, 'Word', class: 'control-label' %></div>
          <div class="offset-sm-3 col-sm-6"><%= f.text_field :word, class: 'form-control' , size: 30 %></div>
      </div>
  </div>
  
  <div class="form-group">
      <div class="form-inline offset-sm-2 col-sm-8">
          <div class="offset-sm-1 col-sm-2"><%= f.label :description, 'Description' %></div>
          <div class="offset-sm-3 col-sm-6"><%= f.text_area :description, class: "form-control" , size: "30x10" %></div>
      </div>
  </div>
  
  
  <%= f.submit 'Add',class: 'btn btn-outline-secondary offset-sm-2 col-sm-8 mt-sm-5' %>

 <% end %>

 

<div class="text-center offset-sm-7 mt-sm-2">
    <%= link_to 'To List', posts_path %>
</div>
 
