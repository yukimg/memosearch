<div class="row">
    <div class="mx-auto">
        <%= form_with(url: root_path, method: :get, class: "form-inline-sm", local: true) do |f| %>
        <div class="mt-5" >
                <%= text_field_tag :keyword %>
                <%= f.submit 'Search',class: 'btn btn-outline-dark ml-5' %>
        </div>
 　　　　　<% end %>
    </div>
</div>


<div class="row">
    <div class="mx-auto">
        <ul>
            <% @posts.each do |post| %>
            <div class="mt-5"><li><%= post.word %>・・・<%= post.description %></li></div>
            <% end %>
        </ul>
    </div>
</div>
    
 