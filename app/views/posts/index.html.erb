<div class="row">
    <div class="mx-auto">
        <%= form_with(url: root_path, method: :get, class: "form-inline-sm", local: true) do |f| %>
        <div class="mt-5" >
                <%= text_field_tag :keyword %>
                <%= f.submit 'Search',class: 'btn btn-outline-dark ml-5' %>
        </div>
 　　　　　<% end %>
    </div>
</div>


<div class="row">
    <div class="mx-auto">
        <ul>
            <% @posts.each do |post| %>
            <div class="mt-5"><li><%= link_to post.word, post %>・・・<%= post.description %></li></div>
            <% end %>
        </ul>
    </div>
</div>

<%= paginate @posts %>

<div class="col-2 mx-auto mt-5">
    <%= link_to 'Add Note', new_post_path, class: "btn btn-outline-dark btn-block" %>
</div>
 