<div class="text-center">
  <h1>Login</h1>
</div>

<div class="row">
  <div class="offset-2 col-8 mt-5 text-center">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      
      <div class="form-group form-inline offset-2">
        <div class="col-3"><%= f.label :name, 'Name' %></div>
        <div class="col-6"><%= f.text_field :name, class: 'form-control', size: 30 %></div>
      </div>
      
      <div class="form-group form-inline offset-2">
        <div class="col-3"><%= f.label :password, 'Password' %></div>
        <div class="col-6"><%= f.password_field :password, class: 'form-control', size: 30 %></div>
      </div>

      <%= f.submit 'Login', class: 'btn btn-outline-secondary col-7 mt-4' %>
      
      <div class="text-center offset-6 mt-2">
        <%= link_to 'Sign up', signup_path %>
      </div>

    <% end %>
  </div>
</div>