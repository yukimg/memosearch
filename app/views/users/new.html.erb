<div class="text-center">
  <h1>Sign up</h1>
</div>

<div class="row">
  <div class="offset-sm-2 col-sm-8 mt-sm-5 ">

    <%= form_with(model: @user, local: true) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group form-inline offset-sm-2">
        <div class="col-sm-3"><%= f.label :name, 'Name' %></div>
        <div class="col-sm-6"><%= f.text_field :name, class: 'form-control', size: 30 %></div>
      </div>
      
      <div class="form-group form-inline offset-sm-2">
        <div class="col-sm-3"><%= f.label :password, 'Password' %></div>
        <div class="col-sm-6"><%= f.password_field :password, class: 'form-control', size: 30 %></div>
        
      </div>

      <div class="form-group form-inline offset-sm-2">
        <div class="col-sm-3"><%= f.label :password_confirmation, 'Confirmation' %></div>
        <div class="col-sm-6"><%= f.password_field :password_confirmation, class: 'form-control', size: 30 %></div>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-outline-secondary offset-sm-2 col-sm-8 mt-4' %>
      
      <div class="text-center offset-sm-7 mt-sm-2">
        <%= link_to 'Login', login_path %>
      </div>

    <% end %>
  </div>
</div>